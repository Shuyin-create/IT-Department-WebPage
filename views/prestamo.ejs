<%-include("partials/header") %>

<%-include("partials/nav-bar")%>

<div class="container">

  <form action="/prestamo" method="POST">
    <div class="col-md-6">
      <label for="inputEmail4" class="form-label">Nombre y Apellidos</label>
      <input type="text" class="form-control" id="name" name="name">
    </div>
    <div class="col-md-6">
      <label for="NombreApellidos" class="form-label">Email de estudiante</label>
      <input type="email" class="form-control" id="email" name="email">
    </div>

    <div class="col-4">
      <label for="telefono" class="form-label">Telefono</label>
      <input type="text" class="form-control" id="contactNumber" name="contactNumber">
    </div>

    <div class="col-4">
      <label for="inputAddress2" class="form-label">Numero de estudiante</label>
      <input type="text" class="form-control" id="studentNumber" name="studentNumber">
    </div>

    <div class="col-4">
      <label for="inputCity" class="form-label">Departamento Academico</label>
      <input type="text" class="form-control" id="department" name="department">
    </div>
    <div class="col-6">
      <label for="inputAddress2" class="form-label">Articulo</label>
      <select class="form-select" id="choice" name="choice">
        <option selected>Choose...</option>
        <option value="Laptop">Laptop</option>
        <option value="HotSpot">HotSpot</option>
        <option value="Laptop and HotSpot">Laptop and Hotspot</option>
      </select>
    </div>
    <div class="col-12">
    <button type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
      Request
    </button>
    </div>
  </form>

<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Confirmation</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Su equipo ha sido solicitado.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


</div>


<%-include("partials/footer") %>
